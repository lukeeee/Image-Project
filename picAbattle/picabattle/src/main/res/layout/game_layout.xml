<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="se.app.picabattle.Game" >

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Vad är det på pizzan?"
        android:id="@+id/question"
        android:textColor="#fff"
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/pizza"
            android:id="@+id/imageView"/>
        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:background="@drawable/pizza"
            android:id="@+id/clicked"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30dp"
            android:text="Är du beredd? Klicka för att börja"
            android:id="@+id/start"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FreeDigitalPhotos.net || Foto by Suat Eman"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:id="@+id/picTag"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_marginTop="10dp"
            android:layout_height="80dp"
            android:layout_width="170dp"
            android:background="@drawable/btn"
            android:layout_gravity="center"
            android:text="Broccoli, Paprika, Oliver"
            android:textSize="15dp"
            android:id="@+id/first_btn"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="175dp"
            android:layout_height="80dp"
            android:layout_width="170dp"
            android:background="@drawable/btn"
            android:layout_gravity="center"
            android:text="Ananas, Skinka, Paprika"
            android:textSize="15dp"
            android:id="@+id/sec_btn"/>
        <Button
            android:layout_marginTop="95dp"
            android:layout_marginLeft="175dp"
            android:layout_height="80dp"
            android:layout_width="170dp"
            android:background="@drawable/btn"
            android:layout_gravity="center"
            android:text="Kebab, Sås, Lök"
            android:textSize="15dp"
            android:id="@+id/fourth_btn"/>
        <Button
            android:layout_marginTop="95dp"
            android:layout_height="80dp"
            android:layout_width="170dp"
            android:layout_gravity="center"
            android:background="@drawable/btn"
            android:text="Salami, Tomater, Broccoli"
            android:textSize="15dp"
            android:id="@+id/third_btn"/>

    </RelativeLayout>





</LinearLayout>